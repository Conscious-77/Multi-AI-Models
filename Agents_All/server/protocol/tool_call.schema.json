{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Agent Tool Call",
  "type": "object",
  "required": ["tool_call"],
  "properties": {
    "tool_call": {
      "type": "object",
      "required": ["name", "args"],
      "properties": {
        "name": { "type": "string", "enum": ["generate_pdf"] },
        "args": {
          "type": "object",
          "properties": {
            "title": { "type": "string", "minLength": 1, "maxLength": 200 },
            "content_markdown": { "type": "string", "minLength": 1 },
            "filename": { "type": "string", "minLength": 1, "maxLength": 128 }
          },
          "required": ["title", "content_markdown"],
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}



